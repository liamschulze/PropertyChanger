<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="VeryLightGray">#fafafa</Color>
    <SolidColorBrush x:Key="VeryLightGrayBrush" Color="{StaticResource VeryLightGray}" />

    <Color x:Key="LightGray">#bfbfbf</Color>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}" />

    <Color x:Key="DarkerGray">#a6a6a6</Color>
    <SolidColorBrush x:Key="DarkerGrayBrush" Color="{StaticResource DarkerGray}" />

</ResourceDictionary>